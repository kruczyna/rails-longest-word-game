<div class="container mt-5 text-center">
    <h1>New game</h1>

    <!-- Display each letter in a new line and center the text -->
    <div class="mb-4">
        <% @letters.each do |letter| %>
            <div class="letter-box"><%= letter %></div>
        <% end %>
    </div>

    <p>What is the longest you can find?</p>

  <div class="d-flex justify-content-center mt-4">
    <form action="/score" method="post" data-turbo="false">
        <input type="text" name="word" class="form-control me-2">
        <input type="submit" value="Submit word!" class="btn btn-primary">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
